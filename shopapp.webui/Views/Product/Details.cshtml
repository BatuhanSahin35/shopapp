@model Product

@section Categories
{
    @await Component.InvokeAsync("Categories")
}

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@Model.ImageUrl" class="card-img">
            </div>
            <div class="col-md-9">
                
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>